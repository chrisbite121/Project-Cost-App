{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": false,
      "noImplicitAny": false,
      "lib": ["dom","es2015"]
    },
    "compileOnSave": true,
    "exclude": [
      "node_modules/*",
      "aot/",
      "src/boot-aot.ts"
    ],
    "angularCompilerOptions": {
      "genDir": "aot/",
      "skipMetadataEmit": true
    },
    "atom": {
      "rewriteTsconfig": false
    }
  }